{
  "name": "cs2-casual-enjoyer",
  "version": "0.4.6",
  "description": "CS2 Casual Enjoyer Electron App",
  "type": "module",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron . --remote-debugging-port=9222",
    "dev": "electron . --inspect=9223 --remote-debugging-port=9222",
    "build": "electron-builder",
    "dist": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "format": "prettier --write src/"
  },
  "build": {
    "appId": "cs2casualenjoyer",
    "productName": "CS2-Casual-Enjoyer",
    "artifactName": "${productName}.${ext}",
    "files": [
      "src/**/*",
      "index.html",
      "css/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "icon": "assets/icon.ico",
    "asar": true,
    "compression": "maximum",
    "publish": null
  },
  "author": "skik4",
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6"
  }
}